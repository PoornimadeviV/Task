#include <iostream>
using namespace std;

void checkEvenOrOdd(int number) {
    if (number % 2 == 0) {
        cout << number << " is Even" << endl;
    } else {
        cout << number << " is Odd" << endl;
    }
}

int main() {
    int number;
    cout << "Enter a number: ";
    cin >> number;
    
    checkEvenOrOdd(number);

    return 0;
}
